@if (ViewBag.TotalRegistros > 5)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", "lista-TiposProcessos", new { page = 1, pesquisa = ViewBag.Pesquisa })">Primeira</a></li>
            @for (var i = (ViewBag.PaginaAtual - 4); i <= (ViewBag.PaginaAtual - 1); i++)
            {
                @if (i >= 1)
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")" aria-current="page">
                        <a class="page-link" href="@Url.Action("Index", "lista-TiposProcessos", new { page = i, pesquisa = ViewBag.Pesquisa })">@i</a>
                    </li>
                }
            }

            @for (var i = (ViewBag.PaginaAtual); i <= (ViewBag.PaginaAtual + 4); i++)
            {
                @if (i <= (ViewBag.TotalRegistros / 5))
                {
                    <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")" aria-current="page">
                        <a class="page-link" href="@Url.Action("Index", "lista-TiposProcessos", new { page = i, pesquisa = ViewBag.Pesquisa })">@i</a>
                    </li>
                }
            }

            <li class="page-item"><a class="page-link" href="@Url.Action("Index", "lista-TiposProcessos", new { page = (ViewBag.TotalRegistros / 5), pesquisa = ViewBag.Pesquisa })">Última</a></li>
        </ul>
    </nav>
}
